    "setup:mongo:admin": "npm --prefix apps/frontend run setup:mongo:admin",
    "migrate:content:mongo": "npm --prefix apps/frontend run migrate:content:mongo",
    "check:mongo": "npm --prefix apps/frontend run check:mongo"
  }
}
